class = profile-header

$w-logo = 170px;
$w-profile = 76px;

.{class} {
  width: 100%;
  margin-bottom: 50px;

  &__logo {
    width: $w-logo;
    position: absolute;
    left: -($w-logo);
    top: 0;
    bottom: 0;
    margin: auto 0;
    display: block;
    height: 37px;

    div {
      font-size: 22px;
      display inline-block;
      color: #232762;
      vertical-align middle;
      font-weight bold;
    }

    img {
      display inline-block;
      vertical-align middle;
      margin-right: 6px;
    }
  }

  &__links {
    display inline-block;
    width: 100%;
  }

  &__menu {
    position absolute;
    left: 100%
    width: $w-profile;
    top: 32px;
  }

  &__middle{
    margin: 0 auto;
    max-width 700px;
    position relative;
    white-space: nowrap;
  }

  &__nav-container {
    background-color #f5f5f5;
    width 100%;
  }

  &__link1 {
    display inline-block;
    color: #4978ff;
    font-weight normal;
    font-size 16px;
    padding: 32px 10px;
    cursor: pointer;
  }

  &__link2 {
    display inline-block;
    color: #4978ff;
    font-size 16px;
    padding: 12px 10px;
    cursor: pointer;
  }
}