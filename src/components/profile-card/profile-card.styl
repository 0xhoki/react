class = profile-card
$c-brand = #232762;
$c-text = #616161;

.{class} {
  display inline-block;
  font-size 0;
  width: 100%;

  &__photo {
    width 120px;
    display: inline-block;

    img {
      width 100%;
      background-color: #b1b4bb;
      border-radius: 4px;
    }
  }
  &__right-part {
    display inline-block;
    vertical-align middle;
    font-size: 16px;
    width "calc(100% - %s)" % 120px;
    padding-left: 30px;
  }
  &__name {
    font-size 28px;
    font-weight bold;
    margin-bottom 16px;
    color #232762;
  }
  &__detail {
    display: table;
    width 100%;
  }
  &__detail-row {
    display: table-row;
    &:last-child .{class}__detail-cell {
      padding 0;
    }
  }
  &__detail-cell {
    display: table-cell;
    vertical-align middle;
    color: $c-text;
    padding-bottom 10px;

    &--icon {
      font-size: 20px;
      line-height: 20px;
      width: 34px;
      color: #5e626f;
    }
  }
}


.{class}--mobile {
  margin-bottom: 30px;
  border-bottom: 1px solid #aeb0b7;
  padding-bottom: 30px;

  .{class}__photo {
    display block;
    margin: 0 auto 20px auto;
  }
  .{class}__right-part {
    width: 100%;
    padding 0;
    text-align center;
  }
  .{class}__detail-row{
    display block;
  }
  .{class}__detail-cell{
    display inline-block;
  }
}