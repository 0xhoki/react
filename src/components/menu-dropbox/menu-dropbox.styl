class = menu-dropbox

.{class} {
  color: inherit;
  position relative;
  cursor: pointer;

  &__user-img {
    width: 30px;
    height: 30px;
    display inline-block;
    vertical-align middle;
    border-radius: 50%;
    margin-right: 10px;
  }

  &__arrow-container {
    display inline-block;
    vertical-align middle;
    padding: 10px;
    transition: transform 100ms linear;
    color: #232762;
  }

  &__list {
    min-width: 160px;
    position: absolute;
    right: 10px;
    top: 48px;
    display: none;
    background-color: #fff;
    list-style: none;
    padding: 0;
    text-align: right;
    z-index: 1;
    border: 1px solid #dadada;
    border-radius: 3px;
  }

  &__item {
    color: #262626;
    text-decoration: none;
    width: 100%;
    height 100%;
    display block;
    &:hover {
      background-color: #f5f5f5;
    }

    span, a {
      display block;
      width 100%;
      height 100%;
      color: #4978ff;
      padding: 12px 20px;
      &:hover {
        color: #73879C;
      }
    }
  }

  &--focus {
    .{class}__arrow-container {
      transform: rotate(180deg);
    }
    .{class}__list {
      display block;
    }
  }
}