class = footer

.{class} {
  max-width: 700px;
  margin: 0 auto 50px auto;
  text-align center;
  padding: 0 15px;
  position relative;
  padding-top: 12px;

  &:before {
    content: '';
    position absolute;
    top: 0;
    width calc(100% - 30px);
    left: 15px;
    border-top: 1px solid #5e626f;
  }

  &__link {
    display inline-block;
    padding: 6px 8px;
    vertical-align top;
    font-size 14px;
  }
}